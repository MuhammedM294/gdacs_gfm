{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "simple": {
      "format": "%(levelname)s: %(message)s",
      "datefmt": "%Y-%m-%dT%H:%M:%S%z"
    },
    "json_debug": {
      "()": "gdacs_gfm.logger.MyJSONFormatter",
      "fmt_keys": {
        "level": "levelname",
        "message": "message",
        "timestamp": "timestamp",
        "logger": "name",
        "module": "module",
        "function": "funcName",
        "line": "lineno",
        "thread_name": "threadName"
      }
    },
    "json_info": {
      "()": "gdacs_gfm.logger.MyJSONFormatter",
      "fmt_keys": {
        "message": "message",
        "timestamp": "timestamp"
      }
    }
  },
  "handlers": {
    "stderr": {
      "class": "logging.StreamHandler",
      "level": "ERROR",
      "formatter": "simple",
      "stream": "ext://sys.stderr"
    },
    "info_file": {
      "class": "concurrent_log_handler.ConcurrentRotatingFileHandler",
      "level": "INFO",
      "formatter": "json_info",
      "filename": "logs/info.log.jsonl",
      "maxBytes": 100000000,
      "backupCount": 3,
      "encoding": "utf-8"
    },
    "debug_file": {
      "class": "concurrent_log_handler.ConcurrentRotatingFileHandler",
      "level": "DEBUG",
      "formatter": "json_debug",
      "filename": "logs/debug.log.jsonl",
      "maxBytes": 100000000,
      "backupCount": 3,
      "encoding": "utf-8"
    }
  },
  "loggers": {
    "root": {
      "level": "DEBUG",
      "handlers": [
        "stderr",
        "info_file",
        "debug_file"
      ]
    }
  }
}
